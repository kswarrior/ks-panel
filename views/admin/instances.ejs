    <script>
      function openSuspendInfoModal(message) {
          const modal = document.getElementById('suspendInfoModal');
          const modalMessage = document.getElementById('modalMessage');

          modalMessage.innerHTML = formatMessage(message);
          modal.classList.remove('opacity-0', 'pointer-events-none');
          modal.classList.add('opacity-100', 'pointer-events-auto');
      }

      function closeSuspendInfoModal() {
          const modal = document.getElementById('suspendInfoModal');
          modal.classList.remove('opacity-100', 'pointer-events-auto');
          modal.classList.add('opacity-0', 'pointer-events-none');
      }

      function formatMessage(message) {
          return `
              <div class="text-sm text-gray-600">
                  <p class="mt-1 text-neutral-300">${message}</p>
              </div>
          `;
      }
  </script>

<script>
  document.getElementById('image').addEventListener('change', function(event) {
      var selectedOption = event.target.options[event.target.selectedIndex];
      var variables = selectedOption.getAttribute('data-variables');
      var secondCard = document.getElementById('secondCard');
      var variablesForm = document.getElementById('variablesForm');

      if (variables) {
          secondCard.classList.remove('hidden');
          variablesForm.innerHTML = '';
          variables = JSON.parse(variables);

          for (var key in variables) {
              if (variables.hasOwnProperty(key)) {
                  var variable = variables[key];
                  var fieldHtml = '';

                  if (variable.type === 'text') {
                      fieldHtml = `
                          <div>
                              <label class="text-neutral-400 text-sm tracking-tight mb-2">${key}:</label>
                              <input type="text" name="${key}" value="${variable.default || ''}" class="rounded-xl focus:ring-transparent focus:border-transparent text-white text-sm mt-2 mb-4 w-full hover:bg-white/5 px-4 py-2 bg-neutral-600/20 placeholder:text-white/20 border border-white/5" ${variable.required ? 'required' : ''}>
                          </div>
                      `;
                  }

                  variablesForm.insertAdjacentHTML('beforeend', fieldHtml);
              }
          }
      } else {
          secondCard.classList.add('hidden');
      }
  });
</script>

<script>
  // ────────────────────────────────────────────────
  // Load available allocations when node changes
  // ────────────────────────────────────────────────
  // Load available allocations when node changes
document.getElementById('node')?.addEventListener('change', async (e) => {
  const nodeId = e.target.value;
  const allocSelect = document.getElementById('allocationId');

  if (!allocSelect) return;

  allocSelect.innerHTML = '<option value="">Loading available ports...</option>';

  if (!nodeId) {
    allocSelect.innerHTML = '<option value="">-- Select a node first --</option>';
    return;
  }

  try {
    const response = await fetch(`/admin/nodes/${nodeId}/available-allocations`);
    if (!response.ok) throw new Error('Failed to load ports');

    const allocations = await response.json();

    allocSelect.innerHTML = '<option value="">-- Choose available host port --</option>';

    if (!Array.isArray(allocations) || allocations.length === 0) {
      allocSelect.innerHTML = '<option value="">No available ports on this node</option>';
      return;
    }

    allocations.forEach(alloc => {
      const option = document.createElement('option');
      option.value = alloc.id;
      option.textContent = alloc.label;
      allocSelect.appendChild(option);
    });

  } catch (err) {
    console.error(err);
    allocSelect.innerHTML = '<option value="">Error loading ports</option>';
  }
});
</script>

