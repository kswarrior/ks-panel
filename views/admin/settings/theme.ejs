<%- include('../../components/template') %>

<main id="content" class="px-4 sm:px-6 lg:px-8 py-6">

  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <h1 class="text-lg font-semibold text-white">
        <%= req.translations.settings %>
      </h1>
      <p class="mt-1 text-sm text-neutral-400">
        <%= req.translations.changeSettings %>
      </p>
    </div>
  </div>
<%- include('../../components/template') %>


  <!-- THEME CARD -->
  <div class="mt-8 bg-white/5 border border-white/10 rounded-2xl overflow-hidden">

    <!-- Card Title -->
    <div class="px-6 py-4 border-b border-white/10 bg-white/5">
      <h2 class="text-white text-base font-medium">
        Theme
      </h2>
    </div>

    <div class="p-6 space-y-10">

      <!-- Button Color -->
      <form action="/admin/settings/change/theme/color" method="POST" class="space-y-5 max-w-xl">

        <div>
          <label class="block text-sm text-neutral-400 mb-2">
            Button Color
          </label>

          <select
            name="buttoncolor"
            class="w-full rounded-xl bg-white/5 border border-white/10 px-4 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-white/10"
          >
            <option value="bg-white hover:bg-neutral-300 text-neutral-800"
              <%= theme['button-color'] == 'bg-white hover:bg-neutral-300 text-neutral-800' ? 'selected' : '' %>>
              White
            </option>

            <option value="bg-blue-500 hover:bg-blue-600 text-neutral-100"
              <%= theme['button-color'] == 'bg-blue-500 hover:bg-blue-600 text-neutral-100' ? 'selected' : '' %>>
              Blue
            </option>

            <option value="bg-pink-500 hover:bg-pink-600 text-neutral-100"
              <%= theme['button-color'] == 'bg-pink-500 hover:bg-pink-600 text-neutral-100' ? 'selected' : '' %>>
              Pink
            </option>
          </select>
        </div>

        <button
          type="submit"
          class="rounded-xl <%= theme['button-color'] %> px-5 py-2 text-sm font-medium shadow transition"
        >
          <%= req.translations.save %>
        </button>

      </form>


      <!-- Divider -->
      <div class="border-t border-white/10"></div>


      <!-- Panel Theme -->
      <form action="/admin/settings/change/theme/color" method="POST" class="space-y-5 max-w-xl">

        <div>
          <label class="block text-sm text-neutral-400 mb-2">
            Panel Theme
          </label>

          <select
            name="paneltheme"
            class="w-full rounded-xl bg-white/5 border border-white/10 px-4 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-white/10"
          >
            <option value="bg-[#141414]"
              <%= theme['paneltheme-color'] == 'bg-[#141414]' ? 'selected' : '' %>>
              Dark
            </option>

            <option value="bg-sky-950"
              <%= theme['paneltheme-color'] == 'bg-sky-950' ? 'selected' : '' %>>
              Sky Blue
            </option>

            <option value="bg-[#002b36]"
              <%= theme['paneltheme-color'] == 'bg-[#002b36]' ? 'selected' : '' %>>
              Solarized Dark
            </option>

            <option value="bg-fuchsia-950"
              <%= theme['paneltheme-color'] == 'bg-fuchsia-950' ? 'selected' : '' %>>
              Fuchsia
            </option>

            <option value="bg-[#33404d]"
              <%= theme['paneltheme-color'] == 'bg-[#33404d]' ? 'selected' : '' %>>
              Pterodactyl
            </option>

            <option value="bg-neutral-800"
              <%= theme['paneltheme-color'] == 'bg-neutral-800' ? 'selected' : '' %>>
              Bright
            </option>
          </select>
        </div>

        <button
          type="submit"
          class="rounded-xl <%= theme['button-color'] %> px-5 py-2 text-sm font-medium shadow transition"
        >
          <%= req.translations.save %>
        </button>

      </form>


      <!-- Divider -->
      <div class="border-t border-white/10"></div>


      <!-- Footer Toggle -->
      <form action="/admin/settings/toggle/theme/footer" method="POST" class="space-y-4 max-w-xl">

        <div>
          <% if (settings.footer === true) { %>
            <p class="text-sm text-neutral-400">
              KS Panel Credits:
              <span class="text-green-500 font-medium">
                <%= req.translations.enabled %>
              </span>
            </p>
          <% } else { %>
            <p class="text-sm text-neutral-400">
              KS Panel Credits:
              <span class="text-red-500 font-medium">
                <%= req.translations.disabled %>
              </span>
            </p>
          <% } %>
        </div>

        <div class="flex gap-3 flex-wrap">

          <% if (settings.footer === true) { %>
            <button type="submit"
              class="rounded-lg bg-white px-4 py-2 text-sm font-medium text-neutral-800 shadow hover:bg-neutral-200 transition">
              <%= req.translations.disable %>
            </button>
          <% } else { %>
            <button type="submit"
              class="rounded-lg bg-white px-4 py-2 text-sm font-medium text-neutral-800 shadow hover:bg-neutral-200 transition">
              <%= req.translations.enable %>
            </button>
          <% } %>

        </div>

      </form>


      <!-- Divider -->
      <div class="border-t border-white/10"></div>


      <!-- Sidebar Direction -->
      <form action="/admin/settings/change/theme/color" method="POST" class="space-y-4 max-w-xl">

        <input type="hidden" name="sidebardirection" value="toggle">

        <div>
          <% if (theme['sidebar-direction'] === "right") { %>
            <p class="text-sm text-neutral-400">
              Sidebar Position:
              <span class="text-purple-500 font-medium">Right</span>
            </p>
          <% } else { %>
            <p class="text-sm text-neutral-400">
              Sidebar Position:
              <span class="text-blue-500 font-medium">Left</span>
            </p>
          <% } %>
        </div>

        <button
          type="submit"
          class="rounded-lg bg-white px-4 py-2 text-sm font-medium text-neutral-800 shadow hover:bg-neutral-200 transition"
        >
          Toggle Position
        </button>

      </form>

    </div>
  </div>

</main>

<%- include('../../components/footer') %>
