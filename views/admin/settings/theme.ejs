<%- include('../../components/template') %>

<main id="content" class="<%= theme['paneltheme-color'] %> min-h-screen">
   <div class="bg-transparent">
      <div class="sm:flex sm:items-center px-8 pt-6">
         <div class="sm:flex-auto">
            <h1 class="text-xl font-semibold leading-6 text-white">
               <%= req.translations.settings %>
            </h1>
            <p class="mt-2 tracking-tight text-sm text-neutral-400">
               <%= req.translations.changeSettings %>
            </p>
         </div>
      </div>
   </div>

   <%- include('../../components/settings') %>

   <div class="flex flex-col bg-white/5 backdrop-blur-md m-8 py-6 rounded-2xl shadow-xl border border-white/10">
      <h1 class="text-white text-[18px] px-6 py-4 w-full bg-white/5 rounded-t-2xl font-medium border-b border-white/10">
         Theme Settings
      </h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-6 py-6">

         <!-- Button Color -->
         <div class="bg-white/5 p-5 rounded-xl border border-white/10">
            <form action="/admin/settings/change/theme/color" method="POST" class="flex flex-col">
               <label class="text-neutral-400 text-sm mb-2">Button Color</label>

               <select name="buttoncolor"
                  class="rounded-xl text-white text-sm w-full px-4 py-2 border border-white/10 bg-white/5 focus:ring-0 focus:outline-none">
                  <option value="bg-white hover:bg-neutral-300 text-neutral-800"
                     <%= theme['button-color'] === 'bg-white hover:bg-neutral-300 text-neutral-800' ? 'selected' : '' %>>
                     White
                  </option>
                  <option value="bg-blue-500 hover:bg-blue-600 text-neutral-100"
                     <%= theme['button-color'] === 'bg-blue-500 hover:bg-blue-600 text-neutral-100' ? 'selected' : '' %>>
                     Blue
                  </option>
                  <option value="bg-pink-500 hover:bg-pink-600 text-neutral-100"
                     <%= theme['button-color'] === 'bg-pink-500 hover:bg-pink-600 text-neutral-100' ? 'selected' : '' %>>
                     Pink
                  </option>
               </select>

               <button type="submit"
                  class="mt-5 rounded-xl <%= theme['button-color'] %> px-4 py-2 text-sm font-medium shadow-lg transition focus:outline-none">
                  <%= req.translations.save %>
               </button>
            </form>
         </div>

         <!-- Panel Theme -->
         <div class="bg-white/5 p-5 rounded-xl border border-white/10">
            <form action="/admin/settings/change/theme/color" method="POST" class="flex flex-col">
               <label class="text-neutral-400 text-sm mb-2">Panel Theme</label>

               <select name="paneltheme"
                  class="rounded-xl text-white text-sm w-full px-4 py-2 border border-white/10 bg-white/5 focus:ring-0 focus:outline-none">
                  <option value="bg-[#141414]"
                     <%= theme['paneltheme-color'] === 'bg-[#141414]' ? 'selected' : '' %>>
                     Dark
                  </option>
                  <option value="bg-sky-950"
                     <%= theme['paneltheme-color'] === 'bg-sky-950' ? 'selected' : '' %>>
                     Sky Blue
                  </option>
                  <option value="bg-[#002b36]"
                     <%= theme['paneltheme-color'] === 'bg-[#002b36]' ? 'selected' : '' %>>
                     Solarized Dark
                  </option>
                  <option value="bg-fuchsia-950"
                     <%= theme['paneltheme-color'] === 'bg-fuchsia-950' ? 'selected' : '' %>>
                     Fuchsia
                  </option>
                  <option value="bg-[#33404d]"
                     <%= theme['paneltheme-color'] === 'bg-[#33404d]' ? 'selected' : '' %>>
                     Pterodactyl
                  </option>
                  <option value="bg-neutral-800"
                     <%= theme['paneltheme-color'] === 'bg-neutral-800' ? 'selected' : '' %>>
                     Bright
                  </option>
               </select>

               <button type="submit"
                  class="mt-5 rounded-xl <%= theme['button-color'] %> px-4 py-2 text-sm font-medium shadow-lg transition focus:outline-none">
                  <%= req.translations.save %>
               </button>
            </form>
         </div>

         <!-- Footer Toggle + Sidebar -->
         <div class="bg-white/5 p-5 rounded-xl border border-white/10 space-y-6">

            <!-- Footer Toggle -->
            <form action="/admin/settings/toggle/theme/footer" method="POST">
               <div class="mb-3 text-neutral-400 text-sm">
                  Skyport Credits:
                  <% if (settings.footer === true) { %>
                     <span class="text-green-500 font-medium">
                        <%= req.translations.enabled %>
                     </span>
                  <% } else { %>
                     <span class="text-red-500 font-medium">
                        <%= req.translations.disabled %>
                     </span>
                  <% } %>
               </div>

               <div class="flex space-x-2">
                  <% if (settings.footer === true) { %>
                     <button type="submit"
                        class="px-4 py-2 rounded-lg bg-white text-neutral-800 text-sm shadow hover:bg-neutral-200 transition">
                        <%= req.translations.disable %>
                     </button>
                  <% } else { %>
                     <button type="submit"
                        class="px-4 py-2 rounded-lg bg-white text-neutral-800 text-sm shadow hover:bg-neutral-200 transition">
                        <%= req.translations.enable %>
                     </button>
                  <% } %>
               </div>
            </form>

            <!-- Sidebar Direction -->
            <form action="/admin/settings/change/theme/color" method="POST">
               <div class="mb-3 text-neutral-400 text-sm">
                  Sidebar Position:
                  <% if (theme['sidebar-direction'] === "right") { %>
                     <span class="text-purple-500 font-medium">Right</span>
                  <% } else { %>
                     <span class="text-blue-500 font-medium">Left</span>
                  <% } %>
               </div>

               <input type="hidden" name="sidebardirection"
                  value="<%= theme['sidebar-direction'] === 'right' ? 'left' : 'right' %>">

               <button type="submit"
                  class="px-4 py-2 rounded-lg <%= theme['button-color'] %> text-sm shadow transition">
                  Switch Sidebar
               </button>
            </form>

         </div>
      </div>
   </div>
</main>

<%- include('../../components/footer') %>
