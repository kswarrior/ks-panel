<%- include('../components/template') %>
<main id="content" class="min-h-screen bg-gradient-to-b from-neutral-900 via-neutral-800 to-black text-white">
   <div class="container mx-auto px-4 py-8 max-w-6xl">
      <header class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-8 gap-4">
         <div>
            <h1 class="text-2xl font-bold tracking-tight">
               <%= req.translations.localNode || 'Local Node Manager' %>
            </h1>
            <p class="mt-1 text-sm text-neutral-400 max-w-md">
               <%= req.translations.localNodeText || 'Install, configure, and manage Wings daemon locally on this server' %>
            </p>
         </div>
         <div class="flex flex-wrap gap-2 text-xs text-neutral-500">
            <span>Folder: <code class="bg-neutral-700 px-2 py-1 rounded">/localnode</code></span>
            <span>PID File: <code class="bg-neutral-700 px-2 py-1 rounded"><%= process.cwd() %>/localnode.pid</code></span>
         </div>
      </header>

      <!-- Main Card -->
      <div class="bg-neutral-900/60 backdrop-blur-md shadow-2xl ring-1 ring-white/5 rounded-3xl p-6 lg:p-8 border border-neutral-700/50">
         
         <!-- Status Bar -->
         <div class="mb-6 p-4 bg-neutral-800/50 rounded-2xl border border-neutral-600/50">
            <div class="flex flex-col sm:flex-row gap-4 items-center justify-between">
               <div class="flex items-center gap-3">
                  <div id="status-indicator" class="w-3 h-3 rounded-full bg-yellow-500 animate-pulse"></div>
                  <span id="status-text" class="text-sm font-medium text-neutral-300">Initializing...</span>
               </div>
               <button onclick="checkStatus()" 
                       class="px-4 py-2 bg-neutral-700 hover:bg-neutral-600 text-xs rounded-xl transition duration-200">
                  Refresh Status
               </button>
            </div>
         </div>

         <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Configuration Section -->
            <div class="bg-neutral-800/30 rounded-2xl p-5 border border-neutral-700/30">
               <h2 class="text-lg font-semibold mb-4 text-white">Setup</h2>
               <div class="space-y-4">
                  <div>
                     <label for="configuration" class="block text-sm font-medium text-neutral-300 mb-2">
                        Configure Args (from panel node setup)
                     </label>
                     <input type="text" id="configuration" 
                            placeholder="--panel https://your-panel.com --key xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" 
                            class="w-full px-4 py-3 bg-neutral-700/50 border border-neutral-600/50 rounded-xl text-sm placeholder-neutral-500 focus:border-indigo-400 focus:ring-1 focus:ring-indigo-400/50 outline-none transition duration-200">
                     <p class="mt-2 text-xs text-neutral-500 italic">
                        Copy from Admin > Nodes > [Node] > Configure Command (after the last --)
                     </p>
                  </div>
                  <div class="flex gap-3">
                     <button onclick="installWings()" 
                             class="flex-1 rounded-xl bg-indigo-600 hover:bg-indigo-500 px-5 py-3 text-sm font-semibold text-white shadow-md hover:shadow-indigo-500/25 transition duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-neutral-900">
                        Install Wings
                     </button>
                     <button onclick="configureWings()" 
                             class="flex-1 rounded-xl bg-blue-600 hover:bg-blue-500 px-5 py-3 text-sm font-semibold text-white shadow-md hover:shadow-blue-500/25 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-neutral-900">
                        Import Configure
                     </button>
                  </div>
               </div>
            </div>

            <!-- Control Section -->
            <div class="bg-neutral-800/30 rounded-2xl p-5 border border-neutral-700/30">
               <h2 class="text-lg font-semibold mb-4 text-white">Controls</h2>
               <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                  <button onclick="startWings()" 
                          class="rounded-xl bg-green-600 hover:bg-green-500 px-5 py-3 text-sm font-semibold text-white shadow-md hover:shadow-green-500/25 transition duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-neutral-900">
                     Start
                  </button>
                  <button onclick="restartWings()" 
                          class="rounded-xl bg-yellow-600 hover:bg-yellow-500 px-5 py-3 text-sm font-semibold text-white shadow-md hover:shadow-yellow-500/25 transition duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 focus:ring-offset-neutral-900">
                     Restart
                  </button>
                  <button onclick="stopWings()" 
                          class="rounded-xl bg-red-600 hover:bg-red-500 px-5 py-3 text-sm font-semibold text-white shadow-md hover:shadow-red-500/25 transition duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-neutral-900">
                     Stop
                  </button>
               </div>
               <p class="mt-3 text-xs text-neutral-500">Use these to manage the running Wings process</p>
            </div>
         </div>

         <!-- Console -->
         <div class="bg-neutral-800/50 rounded-2xl p-5 border border-neutral-700/30">
            <div class="flex items-center justify-between mb-3">
               <h3 class="text-base font-medium text-white">Live Console</h3>
               <button onclick="clearConsole()" class="text-xs text-neutral-400 hover:text-white transition">Clear</button>
            </div>
            <pre id="console-log" 
                 class="w-full h-80 overflow-auto bg-black/95 text-emerald-400 font-mono text-xs p-4 rounded-xl border border-neutral-600/30 whitespace-pre-wrap break-words leading-relaxed scrollbar-thin scrollbar-thumb-neutral-600 scrollbar-track-neutral-800">
               Ready for output...
            </pre>
         </div>
      </div>

      <!-- Toast Notification -->
      <div id="notification" 
           class="fixed bottom-8 right-8 bg-emerald-700/95 text-white px-6 py-4 rounded-xl shadow-2xl transform transition-all duration-300 translate-y-full opacity-0 z-50 border border-emerald-600/50">
         Action completed!
      </div>
   </div>

   <script>
      const consoleLog = document.getElementById('console-log');
      const statusIndicator = document.getElementById('status-indicator');
      const statusText = document.getElementById('status-text');
      const notification = document.getElementById('notification');

      function showNotification(msg = 'Action completed!') {
         notification.textContent = msg;
         notification.classList.remove('translate-y-full', 'opacity-0');
         notification.classList.add('translate-y-0', 'opacity-100');
         setTimeout(() => {
            notification.classList.remove('translate-y-0', 'opacity-100');
            notification.classList.add('translate-y-full', 'opacity-0');
         }, 3000);
      }

      function updateStatus(running, pid = null) {
         if (running) {
            statusIndicator.className = 'w-3 h-3 rounded-full bg-emerald-500 animate-pulse';
            statusText.textContent = `Running (PID: ${pid || 'Unknown'})`;
         } else {
            statusIndicator.className = 'w-3 h-3 rounded-full bg-red-500';
            statusText.textContent = 'Stopped';
         }
      }

      async function checkStatus() {
         try {
            const response = await fetch('/admin/localnode/status', { method: 'POST' });
            const data = await response.json();
            updateStatus(data.running, data.pid);
         } catch (err) {
            console.error('Status check failed:', err);
         }
      }

      function runAction(endpoint, message) {
         consoleLog.innerHTML = `[${new Date().toLocaleTimeString()}] ${message}...\n\n`;
         consoleLog.scrollTop = consoleLog.scrollHeight;

         fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ configuration: document.getElementById('configuration').value.trim() })
         })
         .then(response => {
            if (!response.ok) throw new Error(`HTTP ${response.status}`);
            return response.json();
         })
         .then(data => {
            consoleLog.innerHTML += data.log || 'No output received.\n';
            consoleLog.scrollTop = consoleLog.scrollHeight;
            showNotification(message + ' completed');
            setTimeout(checkStatus, 2000); // Check status after action
         })
         .catch(error => {
            consoleLog.innerHTML += `\n\n[${new Date().toLocaleTimeString()}] [ERROR] ${error.message}\n`;
            consoleLog.scrollTop = consoleLog.scrollHeight;
            showNotification('Error: ' + error.message, true);
         });
      }

      function installWings() { runAction('/admin/localnode/install', 'Installing Wings'); }
      function configureWings() { runAction('/admin/localnode/configure', 'Configuring Wings'); }
      function startWings() { runAction('/admin/localnode/start', 'Starting Wings'); }
      function restartWings() { runAction('/admin/localnode/restart', 'Restarting Wings'); }
      function stopWings() { runAction('/admin/localnode/stop', 'Stopping Wings'); }

      function clearConsole() {
         consoleLog.innerHTML = `[${new Date().toLocaleTimeString()}] Console cleared.\n`;
         consoleLog.scrollTop = consoleLog.scrollHeight;
      }

      // Initial status check
      checkStatus();
   </script>

   <style>
      .scrollbar-thin::-webkit-scrollbar { width: 6px; }
      .scrollbar-thin::-webkit-scrollbar-track { background: #1f2937; }
      .scrollbar-thin::-webkit-scrollbar-thumb { background: #6b7280; border-radius: 3px; }
      .scrollbar-thin::-webkit-scrollbar-thumb:hover { background: #9ca3af; }
   </style>
</main>
