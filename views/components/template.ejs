         @media (max-width: 1024px) {

  .sidebar {
    display: none;
    position: fixed;
    z-index: 50;
    height: 100%;
    width: 225px;
    backdrop-filter: blur(var(--backdrop-blur));
    background: rgba(0, 0, 0, 0.4);
    overflow-y: auto;

    /* Original transform */
    transform: translateX(-100%);

    /* Added smooth animation */
    opacity: 0;
    transition: 
      transform 0.4s cubic-bezier(0.22, 1, 0.36, 1),
      opacity 0.3s ease;
  }

  .sidebar.open {
    display: block;
    transform: translateX(0);

    /* Added fade in */
    opacity: 1;
    animation: sidebarSlide 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .sidebar.expanded {
    width: 100%;
  }

}

/* Animation */
@keyframes sidebarSlide {
  from {
    transform: translateX(-110%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}
